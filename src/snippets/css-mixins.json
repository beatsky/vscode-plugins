{
    ".flex": {
        "prefix": ".flex",
        "body": [
            ".flex();"
        ],
        "description": "[@justify: center; @align: center; @direction: row]"
    },
    ".box-sizing": {
        "prefix": ".box-sizing",
        "body": [
            ".box-sizing();"
        ],
        "description": "[box-sizing]"
    },
    ".placeholder": {
        "prefix": ".placeholder",
        "body": [
            ".placeholder();"
        ],
        "description": "[.placeholder(@color)]"
    },
    ".clearfix": {
        "prefix": ".clearfix",
        "body": [
            ".clearfix();"
        ],
        "description": "[.clearfix()]"
    },
    ".size": {
        "prefix": ".size",
        "body": [
            ".size(${1:@width}, ${2:@height});"
        ],
        "description": "[size]"
    },
    ".square": {
        "prefix": ".square",
        "body": [
            ".square(${1:@size});"
        ],
        "description": "[square]"
    },
    ".round": {
        "prefix": ".round",
        "body": [
            ".round(${1:@size});"
        ],
        "description": "[round]"
    },
    ".ellipsis": {
        "prefix": ".ellipsis",
        "body": [
            ".ellipsis();"
        ],
        "description": " [.ellipsis(${1:@line-num}) 超出行数截断只在WebKit内核下有效]"
    },
    ".absolute": {
        "prefix": ".absolute",
        "body": [
            ".absolute($0);"
        ],
        "description": "[@top, @right, @bottom,@left]"
    },
    ".fixed": {
        "prefix": ".fixed",
        "body": [
            ".fixed($0);"
        ],
        "description": "[@top, @right, @bottom,@left]"
    },
    ".relative": {
        "prefix": ".relative",
        "body": [
            ".relative($0);"
        ],
        "description": "[@top, @right, @bottom,@left]"
    },
    ".padding": {
        "prefix": ".padding",
        "body": [
            ".padding($0);"
        ],
        "description": "[@top, @right, @bottom,@left]"
    },
    ".margin": {
        "prefix": ".margin",
        "body": [
            ".margin($0);"
        ],
        "description": "[@top, @right, @bottom,@left]"
    },
    ".border-color": {
        "prefix": ".border-color",
        "body": [
            ".border-color($0);"
        ],
        "description": "[@topcolor, @rightcolor, @bottomcolor, @leftcolor]"
    },
    ".border-style": {
        "prefix": ".border-style",
        "body": [
            ".border-style($0);"
        ],
        "description": "[@style, @style, @style, @style]"
    },
    ".border-width": {
        "prefix": ".border-width",
        "body": [
            ".border-width($0);"
        ],
        "description": "[@width, @width, @width, @width]"
    }
}